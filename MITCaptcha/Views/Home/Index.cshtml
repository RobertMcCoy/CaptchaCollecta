@model MITCaptcha.Models.SolverViewModel

@{
    ViewData["Title"] = "Captcha Solver";
}

<h2>View</h2>

<form asp-action="Post" method="post">
    <div class="form-horizontal">
        <h4>Solver View Model</h4>
        <input type="hidden" asp-for="@Model.CaptchaItem.Name" />
        <input type="hidden" asp-for="@Model.CaptchaItem.JpegBase64" />
        <input type="hidden" asp-for="@Model.CaptchaSolution.Name" />
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <img src="data:image/jpeg;base64,@Model.CaptchaItem.JpegBase64" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="text" asp-for="@Model.CaptchaSolution.Solution" label="Yo waddafuq is it?" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn" type="submit" value="Submit" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script type="text/javascript">
            $(document).ready(function () {
                {
                    document.getElementById("CaptchaSolution_Solution").focus();
                }
            })
        </script>
}
